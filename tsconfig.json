{
  "include": ["blocks/**/*"],
  "exclude": ["node_modules/*"],
  "compilerOptions": {
    "target": "ES6",
    "lib": ["es5", "es6", "dom", "dom.iterable"],
    "module": "Node16",
    "rootDir": "./",
    "moduleResolution": "node16",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  }
}
