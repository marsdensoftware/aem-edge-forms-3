{
    "definitions": [
        {
            "title": "Date Picker",
            "id": "datepicker",
            "plugins": {
                "xwalk": {
                    "page": {
                        "resourceType": "core/fd/components/form/panelcontainer/v1/panelcontainer",
                        "template": {
                            "jcr:title": "Date Picker",
                            "fieldType": "panel",
                            "fd:viewType": "datepicker",
                            "name": "datepicker",
                            "month": {
                                "jcr:title": "Month",
                                "name": "month",
                                "type": "string",
                                "placeholder": "Month",
                                "enumNames": [],
                                "fieldType": "drop-down",
                                "enum": [],
                                "sling:resourceType": "core/fd/components/form/dropdown/v1/dropdown",
                                "required": true
                            },
                            "year": {
                                "jcr:title": "Year",
                                "required": true,
                                "sling:resourceType": "core/fd/components/form/dropdown/v1/dropdown",
                                "fieldType": "drop-down",
                                "enumNames": [],
                                "placeholder": "Year",
                                "enum": [],
                                "type": "string",
                                "name": "year"
                            }
                        }
                    }
                }
            }
        }
    ],
    "models": [
        {
            "id": "datepicker",
            "fields": [
                {
                    "component": "container",
                    "name": "basic",
                    "label": "Basic",
                    "collapsible": false,
                    "fields": [
                        {
                            "component": "text",
                            "name": "name",
                            "label": "Name",
                            "valueType": "string",
                            "required": true,
                            "valueFormat": "regexp",
                            "validation": {
                                "regExp": "^[^$].*",
                                "customErrorMsg": "Name cannot start with $"
                            }
                        },
                        {
                            "component": "text",
                            "name": "jcr:title",
                            "label": "Title",
                            "valueType": "string"
                        },
                        {
                            "component": "text",
                            "name": "yearMin",
                            "label": "Year lower boundary",
                            "valueType": "string",
                            "description": "Lower boundary for year. Could be 1980, or -/+45. Default is 20 years in the past."
                        },
                        {
                            "component": "text",
                            "name": "yearMax",
                            "label": "Year upper boundary",
                            "valueType": "string",
                            "description": "Upper boundary for year. Could be 2030, or -/+45. Default is current year."
                        }
                    ]
                }
            ]
        }
    ]
}