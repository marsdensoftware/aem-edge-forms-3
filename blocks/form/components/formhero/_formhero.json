{
  "definitions": [
    {
      "title": "Form Hero",
      "id": "formhero",
      "plugins": {
        "xwalk": {
          "page": {
            "resourceType": "core/fd/components/form/panelcontainer/v1/panelcontainer",
            "template": {
              "jcr:title": "Form Hero",
              "fieldType": "panel",
              "fd:viewType": "formhero",
              "minOccur": 1,
              "text-container": {
                "jcr:title": "Text Container",
                "fieldType": "panel",
                "colspan": 6,
                "sling:resourceType": "core/fd/components/form/panelcontainer/v1/panelcontainer",
                "text": {
                  "jcr:title": "Text",
                  "fieldType": "plain-text",
                  "textIsRich": true,
                  "value": "Adaptive Form Text Component",
                  "sling:resourceType": "core/fd/components/form/text/v1/text"
                }
              },
              "image": {
                "jcr:title": "Image",
                "fieldType": "image",
                "colspan": 6,
                "sling:resourceType": "core/fd/components/form/image/v1/image"
              }
            }
          }
        }
      }
    }
  ],
  "models": [
    {
      "id": "formhero",
      "fields": [
        {
          "component": "container",
          "name": "basic",
          "label": "Basic",
          "collapsible": false,
          "fields": [
            {
              "component": "text",
              "name": "name",
              "label": "Name",
              "valueType": "string",
              "required": true,
              "valueFormat": "regexp",
              "validation": {
                "regExp": "^[^$].*",
                "customErrorMsg": "Name cannot start with $"
              }
            },
            {
              "component": "text",
              "name": "jcr:title",
              "label": "Title",
              "valueType": "string"
            }
          ]
        },
        {
          "...": "../../models/form-common/_responsive-container-component.json"
        },
        {
          "...": "../../models/form-common/_responsive-columns-component.json"
        }
      ]
    }
  ],
  "filters": [

  ]

}
