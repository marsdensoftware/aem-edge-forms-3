{
  "definitions": [
    {
      "title": "Form Hero",
      "id": "form-hero",
      "plugins": {
        "xwalk": {
          "page": {
            "resourceType": "core/fd/components/form/panelcontainer/v1/panelcontainer",
            "template": {
              "jcr:title": "Form Hero",
              "fieldType": "panel",
              "fd:viewType": "form-hero",
              "text": {
                "jcr:title": "Text",
                "fieldType": "plain-text",
                "textIsRich": true,
                "value": "Adaptive Form Text Component",
                "sling:resourceType": "core/fd/components/form/text/v1/text"
              },
              "image": {
                "jcr:title": "Image",
                "fieldType": "image",
                "sling:resourceType": "core/fd/components/form/image/v1/image"
              }
            }
          }
        }
      }
    }
  ],
  "models": [
    {
      "id": "form-hero",
      "fields": [
        {
          "component": "container",
          "name": "basic",
          "label": "Basic",
          "collapsible": false,
          "fields": [
            {
              "component": "text",
              "name": "name",
              "label": "Name",
              "valueType": "string",
              "required": true,
              "valueFormat": "regexp",
              "validation": {
                "regExp": "^[^$].*",
                "customErrorMsg": "Name cannot start with $"
              }
            },
            {
              "component": "text",
              "name": "jcr:title",
              "label": "Title",
              "valueType": "string"
            }
          ]
        }
      ]
    }
  ]
}
